<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/inv/addclass" method="post">
    <fieldset>
        <div><i>Field is required</i></div>
        <label for="classification_name">Classification Name</label>
        <input type="text" name="classification_name" id="classification_name" required pattern="[^' ']+[a-zA-Z]">
        <div><i>Name must be alphabetic characters only.</i></div>
        <input type="submit" id="submit" value="Add Classification">
    </fieldset>
</form>