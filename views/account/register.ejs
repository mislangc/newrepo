<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/account/register" method="post">
    <fieldset>
        <legend>Make an Account</legend>
        <i class="form-italics">All fields are required</i>
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required>
        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required>
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required placeholder="emailname@gmail.com">
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" minlength="12" required placeholder="paSSwoRD@#21" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span id="password-button">Show Password <i>(will be fixed soon)</i></span>
        <i class="form-italics">Password must contain at least 12 characters, 1 capital letter, 1 number and 1 special character.</i>
        <input type="submit" id="submit" value="Register">  
    </fieldset>
</form>


