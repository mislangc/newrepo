<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p>You're logged in</p>
<a href="/account/update/<%= locals.accountData.account_id %>">Edit Account Information</a>

<% if(locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %>
  <h3>Inventory Management</h3>
  <a href="/inv">Manage Inventory</a>
<% } %>

<% if(locals.accountData.account_type == "Admin") { %>
  <table id="classificationDisplay"></table>
  <table id="inventoryDisplay"></table>
  <script src="../../js/all-inventory.js"></script>
  <script src="../../js/all-classification.js"></script>
<% } %>

