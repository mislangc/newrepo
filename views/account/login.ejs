<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<form action="#">
    <fieldset>
        <legend>My Account</legend>
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required>
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <i class="form-italics">Password must contain at least 12 characters, 1 capital letter, 1 number and 1 special character.</i>
        <input type="submit" id="submit" value="Login">
        <span>No Account? <a href="register">Sign Up</a></span>   
    </fieldset>
</form>